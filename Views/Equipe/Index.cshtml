@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<link rel="stylesheet" href="~/css/equipes.css">

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">
        @if (ViewBag.UserName == null)
        {
            <a asp-area="" asp-controller="Login" asp-action="Index">
                Login
            </a>
        }
        else
        {
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                <input class="campo-entrada" type="text" name="Nome" required placeholder="Digite o nome da sua equipe:">
                <label class="foto" for="foto-file">
                    Nenhuma imagem selecionada...
                    <input type="file" id="foto-file" name="Imagem">
                </label>

                <button>Cadastro</button>

            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Foto</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>

                @foreach (Equipe equipe in ViewBag.Equipe)
                {
                    <tr>
                        <td>@equipe.IdEquipe</td>
                        <td>@equipe.Nome</td>
                        <td>
                            <img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe/Equipe @equipe.Nome" width="50px">
                        </td>

                        <td>
                            <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><img class="yellow-trash" src="~/assets/trash.png" alt="" onmouseover="Excluir()"></a>
                            <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe"><img src="~/assets/editar.png" alt="" width="20" onmouseover="Editar()"></a>
                        </td>
                    </tr>
                }
                   
                </tbody>
            </table>
        }

    </section>
</main>







