@model Equipe

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/equipes.css">

<!-- MAIN -->
<main>
    <section class="container-grid cadastro-equipes">

        @if (ViewBag.UserName == null)
        {
            <a asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }
        else
        {
            @* Se estiver logado *@
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Atualizar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Ediçcão de Equipes</h1>
                    <hr>
                </div>

                <input type="hidden" name="IdEquipe" value="@ViewBag.Equipe.IdEquipe">
                <input class="campo-entrada" type="text" value="@ViewBag.Equipe.Nome" name="Nome" required placeholder="Digite o nome da sua equipe:">
                <label class="foto" for="foto-file">
                    Nenhuma imagem selecionada...
                    <input type="file" id="foto-file" name="Imagem">
                </label>

                <button>Atualizar</button>

            </form>


            @* <form method="post" action='@Url.Action("Atualizar")' enctype="multipart/form-data">
                <input type="hidden" name="IdEquipe" value="@ViewBag.Equipe.IdEquipe">

                <label for="">Nome</label>
                <input type="text" name="Nome" value="@ViewBag.Equipe.Nome">

                <label for="">Imagem</label>
                <input type="file" name="Imagem" value="@ViewBag.Equipe.Imagem">

                <button type="submit">Atualizar</button>
            </form> *@
        }
    </section>
</main>
